<!--
  Main ui template for our plugin. 
-->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .inline {
      display: inline;
    }
    .typeSpecificPanel {
      margin-left: 20px;
    }
  </ui:style>
  <g:HTMLPanel>
    <label for="lsp_importance">Priority:</label>
    <g:SimplePanel ui:field="importanceDropdownPanel" styleName="{style.inline}"/><br/>
    <g:SimplePanel ui:field="locationInput"/>
  </g:HTMLPanel>
</ui:UiBinder> 